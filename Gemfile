source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.0'
# Use MySQL as the database for Active Record
gem 'mysql2', '0.3.17'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 2.6.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails', '~> 4.0.2'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks', '~> 2.5.3'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.2.6'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.1',          group: :doc

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.9'

# Use unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# Use debugger
# gem 'debugger', group: [:development, :test]

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', '~> 1.2014.10', platforms: [:mingw, :mswin]

# Add bootstrap-sass for a theme
gem 'bootstrap-sass', '~> 3.4.1'

# Add kaminari for paging results
gem 'kaminari', '~> 1.2.1'

# Add flutie for helpers with title and body class
gem 'flutie', '~> 2.0.0'

# Add devise for user authentication
gem 'devise', '~> 4.7.1'

# Add cancancan for authorization
gem 'cancancan', '~> 1.9.2'

# Add country_select to provide a list of countries
gem 'countries', '~> 0.9.3'
gem 'country_select', '~> 2.1.0'

# Add delayed jobs so we can background tasks that aren't critical
gem 'daemons', '~> 1.1.9'
gem 'delayed_job', '~> 4.0.6'
gem 'delayed_job_active_record', '~> 4.0.3'

# Yay Stripe!
gem 'stripe', '~> 1.16.1'
gem 'stripe_event', '~> 1.4.0'

# Code quality tools
group :development do
  gem 'bullet', '~> 4.14.0'
  gem 'rails_best_practices', '~> 1.15.4'
  gem 'brakeman', '~> 2.6.3'
  gem 'rubocop', '~> 0.28.0'
end

# Testing tools
group :test, :development do
  gem 'faker', '~> 1.4.3'
  gem 'factory_girl_rails', '~> 4.5.0'
  gem 'database_cleaner', '~> 1.3.0'
  gem 'rspec', '~> 3.1.0'
  gem 'rspec-rails', '~> 3.1.0'
  gem 'rspec-mocks', '~> 3.1.3'
  gem 'stripe-ruby-mock', '~> 2.0.1'
end
